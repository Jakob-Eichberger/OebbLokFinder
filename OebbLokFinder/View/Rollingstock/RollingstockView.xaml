<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OebbLokFinder.View.Rollingstock.RollingstockView" StyleId="RollingstockView" Loaded="ContentView_Loaded" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="AUTO"/>
            <ColumnDefinition Width="AUTO"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Entry Grid.Column="0" Text="{Binding Path=Rollingstock.ClassNumber}" IsReadOnly="{Binding Path=Rollingstock.AddedManually}"/>
        <Entry Grid.Column="1" Text="{Binding Path=Rollingstock.SerialNumber}" IsReadOnly="{Binding Path=Rollingstock.AddedManually}"/>
        <Entry Grid.Column="2" Text="{Binding Path=Rollingstock.Name}" IsReadOnly="{Binding Path=Rollingstock.AddedManually}"/>
    </Grid>
</ContentView>