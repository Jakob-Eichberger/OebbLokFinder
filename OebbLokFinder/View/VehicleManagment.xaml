<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns:local="clr-namespace:OebbLokFinder.View"
             x:Class="OebbLokFinder.View.VehicleManagment" Title="Fahrzeuge verwalten">
    <Grid x:Name="grid" VerticalOptions="Fill">
        <Grid.RowDefinitions>
            <RowDefinition Height="AUTO"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="AUTO"/>
            <RowDefinition Height="AUTO"/>
        </Grid.RowDefinitions>
        <local:DataUpdaterView Grid.Row="0"></local:DataUpdaterView>
        <ScrollView Grid.Row="1" >
            <StackLayout x:Name="VSLVehicles" VerticalOptions="Fill">
            </StackLayout>
        </ScrollView>
        <StackLayout Grid.Row="2" x:Name="SLUpdate"  >

        </StackLayout>
    </Grid>
    </ContentPage>
